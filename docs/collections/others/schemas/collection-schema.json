{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://geogram.example.com/schemas/collection.json",
  "title": "Geogram Collection Schema",
  "description": "JSON Schema for Geogram collection.js metadata files",
  "type": "object",
  "required": ["version", "collection", "statistics", "views", "tags", "metadata"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version",
      "pattern": "^\\d+\\.\\d+$",
      "examples": ["1.0"]
    },
    "collection": {
      "type": "object",
      "required": ["id", "title", "description", "created", "updated", "signature"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Nostr public key (npub)",
          "pattern": "^npub1[a-z0-9]{58}$"
        },
        "title": {
          "type": "string",
          "description": "Collection title",
          "minLength": 1,
          "maxLength": 100
        },
        "description": {
          "type": "string",
          "description": "Collection description",
          "maxLength": 1000
        },
        "created": {
          "type": "string",
          "description": "Creation timestamp",
          "format": "date-time"
        },
        "updated": {
          "type": "string",
          "description": "Last update timestamp",
          "format": "date-time"
        },
        "signature": {
          "type": "string",
          "description": "Nostr signature (future feature)",
          "pattern": "^([a-f0-9]{128})?$"
        }
      }
    },
    "statistics": {
      "type": "object",
      "required": [
        "files_count",
        "folders_count",
        "total_size",
        "likes",
        "dislikes",
        "comments",
        "ratings",
        "downloads",
        "last_computed"
      ],
      "properties": {
        "files_count": {
          "type": "integer",
          "minimum": 0
        },
        "folders_count": {
          "type": "integer",
          "minimum": 0
        },
        "total_size": {
          "type": "integer",
          "minimum": 0
        },
        "likes": {
          "type": "integer",
          "minimum": 0
        },
        "dislikes": {
          "type": "integer",
          "minimum": 0
        },
        "comments": {
          "type": "integer",
          "minimum": 0
        },
        "ratings": {
          "type": "object",
          "required": ["average", "count"],
          "properties": {
            "average": {
              "type": "number",
              "minimum": 0,
              "maximum": 5
            },
            "count": {
              "type": "integer",
              "minimum": 0
            }
          }
        },
        "downloads": {
          "type": "integer",
          "minimum": 0
        },
        "last_computed": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "views": {
      "type": "object",
      "required": ["total", "unique", "tags"],
      "properties": {
        "total": {
          "type": "integer",
          "minimum": 0
        },
        "unique": {
          "type": "integer",
          "minimum": 0
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "tags": {
      "type": "array",
      "description": "Categorization tags",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 50
      },
      "uniqueItems": true
    },
    "metadata": {
      "type": "object",
      "required": [
        "category",
        "language",
        "license",
        "copyright",
        "website",
        "contact",
        "donation_address",
        "attribution",
        "content_rating",
        "mature_content"
      ],
      "properties": {
        "category": {
          "type": "string",
          "enum": [
            "general",
            "media",
            "documents",
            "software",
            "data",
            "education",
            "entertainment",
            "archive"
          ]
        },
        "language": {
          "type": "string",
          "description": "ISO 639-1 language code",
          "pattern": "^[a-z]{2}$"
        },
        "license": {
          "type": "string",
          "description": "SPDX license identifier or custom text"
        },
        "copyright": {
          "type": "string",
          "maxLength": 500
        },
        "website": {
          "type": "string",
          "format": "uri"
        },
        "contact": {
          "type": "object",
          "required": ["email", "nostr"],
          "properties": {
            "email": {
              "type": "string",
              "format": "email"
            },
            "nostr": {
              "type": "string",
              "pattern": "^(npub1[a-z0-9]{58})?$"
            }
          }
        },
        "donation_address": {
          "type": "string",
          "description": "Bitcoin or Lightning address"
        },
        "attribution": {
          "type": "string",
          "maxLength": 500
        },
        "content_rating": {
          "type": "string",
          "enum": ["G", "PG", "PG-13", "R", "NC-17"]
        },
        "mature_content": {
          "type": "boolean"
        }
      }
    }
  }
}
